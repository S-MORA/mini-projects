<div class="row">
  <div class="col-lg-12 text-center">
    <h1>You must do things!</h1>
    <ul class="list-unstyled">
      <li>Welcome</li>
      <li>
        <a href="/make-a-todo">Create an Item!</a>
      </li>
    </ul>
  </div>
</div>

<% if @todos.length == 0 %>
  <div class="text-center">You have nothing on your todo list. Either good job or get going!</div>
<% else %>
  <div class="row">
    <div class="col-lg-12 text-center">
      <hr>
      <h3>GET TO IT!</h3>  
      <ul class="list-unstyled">
        <%  @todos.each do |instance| %>
          <li class="bt-5">
            Name:
            <%= instance.type %>
            <br>
            Description:
            <%= instance.des %>
            <a href="edit/<%=instance.num%>">
              <input type="submit" class="m-1 btn btn-dark" value="Edit">
            </a>
          </li>

        <% end %>
        <ul>
      </div>
    </div>
  <% end %>
